<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HindranceListActivity">
    <LinearLayout
        android:id="@+id/linlayheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/fade_color">
        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_5sdp"

            android:src="@drawable/ic_arrow_back_black"/>

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"

            android:gravity="center"
            android:text="Hinderance List"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:fontFamily="sans-serif" />
    </LinearLayout>
    <Button
        android:id="@+id/newHindrance"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/_5sdp"
        android:text="New Hindrance"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bg"
        />

    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_margin="@dimen/_5sdp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linlayheader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:orientation="horizontal"


                >



                <TextView
                    android:id="@+id/text_view_activity_eff"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Activity Affected"
                    android:textColor="@android:color/white" />



                <TextView
                    android:id="@+id/text_view_start_date"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Start Date"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/text_view_report_no"
                    android:layout_width="80dp"
                    android:layout_height="60dp"

                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Report No"
                    android:textColor="@android:color/white"
                     />

                <TextView
                    android:id="@+id/text_view_start_distance"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Chainage from"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/text_view_end_distance"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Chainage To"
                    android:textColor="@android:color/white" />


                <TextView
                    android:id="@+id/text_view_areahold"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Area Hold"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/text_view_description"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Description"
                    android:textColor="@android:color/white"
                     />


                <TextView
                    android:id="@+id/text_view_responsibility"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Responsible"
                    android:textColor="@android:color/white"

                    />

                <TextView
                    android:id="@+id/text_view_status"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Status"
                    android:textColor="@android:color/white"

                    />
                <TextView
                    android:id="@+id/text_view_edit"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Edit"
                    android:textColor="@android:color/white"

                    />
            </LinearLayout>


            <ListView
                android:id="@+id/lvhome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:layout_margin="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>